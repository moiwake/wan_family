var reviewHelpfulnessPost = document.getElementById("js-helpful-btn-<%= @review.id %>");

while (reviewHelpfulnessPost.firstElementChild) {
  reviewHelpfulnessPost.firstElementChild.remove();
}

reviewHelpfulnessPost.insertAdjacentHTML('afterbegin',
  '<%= j(render "review_helpfulnesses/shared/add_or_remove_review_helpfulness", review: @review, review_helpfulness: @review_helpfulness) %>'
);
