var reviewLikePost = document.getElementsByClassName("js-like-review-post")[0];

while (reviewLikePost.firstElementChild) {
  reviewLikePost.firstElementChild.remove();
}

reviewLikePost.insertAdjacentHTML('afterbegin',
  '<%= j(render "like_reviews/shared/add_or_remove_review_like", review: @review, like_review: @like_review) %>'
);
