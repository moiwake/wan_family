var reviewReaction = document.getElementById("review-reaction");

while (reviewReaction.firstElementChild) {
  reviewReaction.removeChild(reviewReaction.firstElementChild);
}

reviewReaction.insertAdjacentHTML('afterbegin',
  '<%= j(render "like_reviews/shared/add_or_remove_review_like", review: @review, spot: @review.spot, like_review: @like_review) %>'
);
