var imageLikePost = document.getElementsByClassName("js-image-like-post")[0];

while (imageLikePost.firstElementChild) {
  imageLikePost.firstElementChild.remove();
}

imageLikePost.insertAdjacentHTML('afterbegin',
  '<%= j(render "image_likes/shared/add_or_remove_image_like", blob: @blob, image_like: @image_like) %>'
);
