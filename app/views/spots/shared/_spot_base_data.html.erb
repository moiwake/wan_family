<section class="top-spot-data-wrap block">
  <h3 class="title is-5">スポットの基本情報</h3>
  <div class="table-container box">
    <table class="table spot-data-table">
      <tbody>
        <tr>
          <th>スポット名</th>
          <td><%= spot.name %></td>
        </tr>
        <tr>
          <th>スポット住所</th>
          <td><%= spot.address %></td>
        </tr>
        <tr>
          <th>カテゴリー</th>
          <td><%= spot.category.name %></td>
        </tr>
        <tr>
          <th>ペットを同伴できるエリア</th>
          <td><%= spot.allowed_area.area %></td>
        </tr>
        <tr>
          <th>オフィシャルサイト</th>
          <td><%= link_to spot.official_site, spot.official_site %></td>
        </tr>
        <tr>
          <th>ペットを同伴するときのルール</th>
          <% if spot.decorate.get_attached_saved_rules.size > 0 %>
            <td>
              <ul class="rule-list-wrap">
                <% spot.decorate.get_attached_saved_rules.each do |rule| %>
                  <li><%= rule.rule_option.name %></li>
                <% end %>
              </ul>
            </td>
          <% else %>
            <td>現在登録されているルールはありません。</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</section>
