<div class="table-container box">
  <table class="table spot-register-confirm-table">
    <tbody>
      <tr>
        <th>スポット名</th>
        <td><%= spot.name %></td>
      </tr>
      <tr>
        <th>所在地</th>
        <td><%= spot.address %></td>
      </tr>
      <tr>
        <th>スポットカテゴリー</th>
        <td><%= spot.category.name %></td>
      </tr>
      <tr>
        <th>ペットを同伴できるエリア</th>
        <td><%= spot.allowed_area.area %></td>
      </tr>
      <tr>
        <th>オフィシャルサイトURL</th>
        <td><%= link_to spot.official_site, spot.official_site %></td>
      </tr>
      <tr>
        <th>ペットを同伴するときのルール</th>
        <td>
          <ul class="rule-list-wrap">
            <% spot.decorate.get_attached_unsaved_rules.each do |rule| %>
              <li><%= rule.rule_option.name %></li>
            <% end %>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>
</div>
