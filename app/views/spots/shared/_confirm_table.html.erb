<div class="table-container box">
  <table class="table spot-register-confirm-table">
    <tbody>
      <tr>
        <th>スポット名</th>
        <td><%= spot.name %></td>
      </tr>
      <tr>
        <th>所在地</th>
        <td><%= spot.address %></td>
      </tr>
      <tr>
        <th>スポットカテゴリー</th>
        <td><%= spot.category.name %></td>
      </tr>
      <tr>
        <th>ペットを同伴できるエリア</th>
        <td><%= spot.allowed_area.area %></td>
      </tr>
      <tr>
        <th>オフィシャルサイトURL</th>
        <td><%= link_to spot.official_site, spot.official_site %></td>
      </tr>
      <tr>
        <th rowspan=<%= spot.decorate.get_checked_rule_opt.length %>>ペットを同伴するときのルール</th>
      </tr>
      <tr class="spot-rules-row table">
        <% spot.decorate.get_checked_rule_opt.each do |rule| %>
          <td><%= rule.rule_option.name %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
