<%= render "shared/flash_messages" %>

<div class="spot">
  <h2><%= @spot.name %></h2>

<% @spot.images.each_with_index do |image, i| %>
  <% break if i == 5 %>
  <%= render "reviews/shared/display_image", image: image, limit: 1 %>
<% end %>

<%= link_to "すべての画像を見る", spot_images_path(@spot) %>

  <table>
    <thead>
      <tr>
        <th>住所</th>
        <th>スポットカテゴリー</th>
        <th>同伴可能エリア</th>
        <th>同伴ルール</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @spot.address %></td>
        <td><%= @spot.category.name %></td>
        <td><%= @spot.allowed_area.area %></td>
        <td>
          <ul>
          <% @spot.decorate.find_attached_rules.each do |rule| %>
            <li><%= rule.rule_option.name %></li>
          <% end %>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to "すべてのレビューを見る", spot_reviews_path(@spot), class: "button light ml-3 mt-3" %>
<br>
<%= link_to "スポットの登録内容を更新する", edit_spot_path(@spot), "data-turbolinks": false %>
<br>
<%= link_to "レビューを投稿する", new_spot_review_path(@spot) %>
