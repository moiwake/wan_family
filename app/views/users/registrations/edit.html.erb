<div class="container">
  <div class="main-contents-wrap">
    <%= render "shared/page_link", link_hash: { "マイページへ戻る": users_mypage_spot_favorite_index_path } %>
    <div class="card account-wrap">
      <h2 class="title is-4">アカウント設定</h2>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "account-form" do |f| %>
        <%= render "shared/error_messages", resource: resource %>
        <div class="input-bar field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
        <div class="input-bar field">
          <%= f.label :password, "新しいパスワード" %>
          <span class="input-guide">（半角英数字<%= @minimum_password_length %>文字以上）</span>
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <p class="input-guide">パスワードを変更しない場合は、空欄のままにしてください。</p>
          <p class="input-guide">記号は使用できません。</p>
        </div>
        <div class="input-bar field">
          <%= f.label :password, "新しいパスワード（確認用）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        </div>
        <div class="input-bar field">
          <%= f.label :password, "現在のパスワード" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
        </div>
        <div class="account-btn">
          <input type="button" onclick="submit();" value= "更新" class="button" />
        </div>
      <% end %>
      <%= link_to "アカウントの削除", user_registration_path, data: { confirm: "本当に削除しますか？" }, method: :delete %>
    </div>
  </div>
</div>
<%= javascript_pack_tag "users/registrations/edit" %>
<%= stylesheet_pack_tag "users/registrations/edit" %>
