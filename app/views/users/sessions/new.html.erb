<h2>ログイン</h2>

<% if flash[:alert] %>
    <%= flash[:alert] %>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :email, placeholder: "ご登録のメールアドレス", autofocus: true, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "パスワード", autocomplete: "on" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <input type="button" onclick="submit();" value= "ログイン" />
  </div>
<% end %>

<%= render "users/shared/links" %>
