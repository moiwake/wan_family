<div class="container">
  <div class="main-contents-wrap">
    <div class="page-link-wrap">
      <i class="fa-solid fa-chevron-left mypage-link-icon"></i>
      <%= link_to "戻る", spot_reviews_path(@spot) %>
    </div>
    <div class="edit-review-poster-form-wrap">
      <h2 class="edit-review-main-title title is-5"><i class="fa-solid fa-pencil"></i><%= @spot.name %>のレビューを編集する</h2>
      <%= render "reviews/shared/poster_form", resource: @review_poster_form, spot: @spot, url: spot_review_path(@spot, @review), method: :patch %>
    </div>
  </div>
</div>
<%= javascript_pack_tag "reviews/edit" %>
