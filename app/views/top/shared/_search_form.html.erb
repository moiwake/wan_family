<%= search_form_for q, url: word_search_path do |sf| %>
  <%= sf.fields_for :and, q do |f| %>
    <%= f.label :name_or_address_cont, "施設の名前・住所で探す" %>
    <br>
    <%= f.search_field :name_or_address_cont %>
    <br>
    <%= f.label :category_id_matches_any, "カテゴリーで絞る" %>
    <%= f.collection_check_boxes :category_id_matches_any, categories, :id, :name, { id: :search_spot_category } %>
    <br>
    <%= f.label :allowed_area_id_matches_any, "同伴が可能なエリアで絞る" %>
    <%= f.collection_check_boxes :allowed_area_id_matches_any, allowed_areas, :id, :area, { id: :search_allowed_area } %>
    <br>
    <% if @prefecture_hash.present? %>
      <%= f.label  :address_cont, "都道府県で絞る" %>
      <%= f.select  :address_cont, @prefecture_hash, include_blank: "選択してください" %>
    <% end %>
  <% end %>
  <br>
  <%= sf.submit "検索" %>
<% end %>
