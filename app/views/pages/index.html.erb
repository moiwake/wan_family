<h1>Pages#index</h1>

<%= render "shared/flash_messages" %>

<%if who_signed_in? == "user" %>
  <%= link_to "マイページ", mypage_path %>
  <%= button_to "ログアウト", destroy_user_session_path, method: :delete %>
  <%= link_to "新しいお出かけスポットの登録", new_spot_path, "data-turbolinks": false %>
