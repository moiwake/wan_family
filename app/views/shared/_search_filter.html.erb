<div class="checkbox block">
  <%= f.label :category_id_matches_any, "カテゴリー", class: "label" %>
  <div class="options-wrap js-target-options-wrap">
    <%= f.collection_check_boxes(:category_id_matches_any, categories, :id, :name) do |fc| %>
      <%= fc.check_box(:id => "#{location}_q_category_#{fc.object.id}") %>
      <%= fc.label(:for => "#{location}_q_category_#{fc.object.id}") %>
    <% end %>
  </div>
</div>
<div class="checkbox block">
  <%= f.label :allowed_area_id_matches_any, "同伴が可能なエリア", class: "label" %>
  <div class="options-wrap js-target-options-wrap">
    <%= f.collection_check_boxes :allowed_area_id_matches_any, allowed_areas, :id, :area do |fa| %>
      <%= fa.check_box id: "#{location}_q_allowed_area_#{fa.object.id}" %>
      <%= fa.label for: "#{location}_q_allowed_area_#{fa.object.id}" %>
    <% end %>
  </div>
</div>
<div class="select-box block">
  <%= f.label  :prefecture_id_eq, "都道府県", class: "label" %>
  <div class="select is-small">
    <%= f.grouped_collection_select :prefecture_id_eq, regions, :prefectures, :name, :id, :name, include_blank: "選択してください" %>
  </div>
</div>
