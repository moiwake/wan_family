<div class="spot-list-wrap js-spot-list">
  <% if spots.present? %>
    <% spots.each do |spot| %>
      <%= link_to spot_path(spot.id), class: "list-content card block" do %>
        <div class="spot-images">
          <div class="large-image"><img src="" alt=""></div>
          <div class="small-image">
            <%= render "shared/display_images/limited_blobs", parent_record: spot.images, limit: 3, width: 500, height: 500 %>
          </div>
        </div>
          <%= render "shared/display_spots/spot_list_data", spot: spot.decorate %>
      <% end %>
    <% end %>
  <% else %>
    <p>スポットは登録されておりません。</p>
  <% end %>
</div>
