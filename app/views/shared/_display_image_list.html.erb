<div id="image-list">
  <ul>
    <% blobs.each_with_index do |blob, i| %>
      <li>
        <%= link_to spot_image_path(image_link_params_hash(blob: blob, review_image_only: review_image_only)), remote: true do %>
          <%= image_tag blob.representation(resize_to_limit: [150, 150]), { id: "blob_#{blob.id}", class: "review-image" } %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
