<h2>アカウント設定</h2>

<%= form_for(resource, as: resource_name, url: update_account_path, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "新しいメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %> <i>(パスワードを変更しない場合は、空欄のままにしてください。)</i><br />
    <%= f.password_field :password, placeholder: "半角英数字で#{@minimum_password_length}文字以上", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <input type="button" onclick="submit();" value= "更新" />
  </div>
<% end %>

<h3>アカウントの削除</h3>

<%= button_to "アカウントの削除", cancel_account_path, data: { confirm: "本当に削除しますか？" }, method: :delete %>

<%= link_to "マイページへ戻る", mypage_path %>
