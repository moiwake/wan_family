<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: create_sign_up_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :user_name, placeholder: "ユーザーネーム(後から変更できません)", autofocus: true, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "メールアドレス", autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "半角英数字で#{@minimum_password_length}文字以上", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "パスワードの再確認", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <input type="button" onclick="submit();" value= "新しいアカウントを登録する" />
  </div>
<% end %>

<%= render "devise/shared/links" %>
