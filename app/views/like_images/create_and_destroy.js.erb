var imgReaction = document.getElementById("image-reaction");

while (imgReaction.firstElementChild) {
  imgReaction.removeChild(imgReaction.firstElementChild);
}

imgReaction.insertAdjacentHTML('afterbegin',
  '<%= j(render "like_images/shared/add_or_remove_image_like", blob: @blob, like_image: @like_image) %>'
);
