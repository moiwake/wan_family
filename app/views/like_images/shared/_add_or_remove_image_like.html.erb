<div id="post-image-like">
  <% if posted_by_current_user?(blob) %>
    <% if image_liked?(blob) %>
      <%= link_to spot_image_like_image_path(
          get_parent_image(blob).spot_id,
          get_parent_image(blob),
          like_image,
          blob_id: blob.id
        ), method: :delete, id: "remove-image-like", remote: true do %>
        <span>Cute!</span>
        <i class="fa-solid fa-heart" id="add-image-like-btn"></i>
      <% end %>
    <% else %>
      <%= link_to spot_image_like_images_path(
          get_parent_image(blob).spot_id,
          get_parent_image(blob),
          blob_id: blob.id
        ), method: :post, id: "add-image-like", remote: true do %>
        <span>Cute!</span>
        <i class="fa-regular fa-heart" id="remove-image-like-btn"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to new_user_session_path do %>
      <span>Cute!</span>
      <i class="fa-regular fa-heart"></i>
    <% end %>
  <% end %>
  <span><%= get_image_likes_count(blob) %></span>
</div>
